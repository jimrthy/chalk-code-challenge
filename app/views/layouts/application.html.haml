!!! 5
!= cc_html(:lang => 'en') do
  %head
    %meta(charset='UTF-8')

    -# Set viewport width to device width for mobile
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  
    %title= content_for?(:title) ? yield(:title) : "Guess Gender"

    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "vendor/custom.modernizr" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

    %body
      -# Header
      %section.top-bar-section
        %ul.left
          -# %li.divider
          %li
            = link_to image_tag('logo.png', alt: "Gender Guess"), root_path
          -# %li.divider
        %ul.right
          %li
            = link_to "About", about_path
          -# %li.divider
          %li
            = link_to "Help", help_path

      -# "Real" body"
      %div.row
        -# Add some padding for big screens
        %div.large-1.columns
        %div.large-10.small-12.columns
          = yield
        %div.large-1.columns

      -# Footer
      %div.row
        %div.large-6.columns
          &copy; 2013 James Gatannah
        %div.large-6.columns
          = link_to image_tag('agplv3-88x31.png', alt: "AGPL"), "http://www.gnu.org/licenses/agpl.txt"

